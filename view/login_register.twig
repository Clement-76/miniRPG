{% extends "template.twig" %}

{% block links %}
    <link rel="stylesheet" href="assets/css/fonts.css">
    <link rel="stylesheet" href="assets/css/icons.css">
{% endblock %}

{% block content %}
    <div class="forms">
        {# login form #}

        <div id="login-form" class="{% if activeForm == "login" %} active{% endif %}">
            {% if loginErrors %}
                <p class="error">Identifiant ou mot de passe incorrect</p>
            {% endif %}

            <form action="index.php?action=users.login" method="post">
                <div>
                    <label for="login">Pseudo/email</label><br>
                    <input type="text" id="login" name="login_connect">
                </div>
                <div>
                    <label for="password">Mot de passe</label><br>
                    <input type="password" class="password" name="password_connect">
                </div>
                <div>
                    <input type="submit" value="Se connecter">
                </div>
            </form>
        </div>

        <br><br><br>

        {# register form #}
        <form action="index.php?action=users.register" method="post" class="{% if activeForm == "register" %} active{% endif %}">
            <div>
                <label for="email">Email</label><br>
                <input id="email" type="email" name="email" value="{{ email }}" required>
                {% if registerErrors['email_not_available'] %}<span class="error">L'email {{ email }} n'est pas disponible</span>{% endif %}
                {% if registerErrors['email'] %}<span class="error">Veuillez entrer un email valide</span>{% endif %}
            </div>
            <div>
                <label for="pseudo">Pseudo</label><br>
                <input id="pseudo" type="text" name="pseudo" value="{{ pseudo }}"><br>
                {% if registerErrors['pseudo_not_available'] %}<span class="error">Le pseudo {{ pseudo }} n'est pas disponible</span>{% endif %}
                {% if registerErrors['pseudo'] %}<span class="error">25 caractères maximum, chiffres, lettres, (_-.) autorisés</span>{% endif %}
            </div>
            <div>
                <div class="eye-container">
                    <label for="password">Mot de passe</label><br>
                    <input class="full-width" class="password" type="password" name="password" required>
                    <i class="icon icon-invisible"></i>{# fixer en bas a droite en absolute #}
                </div>
                {% if registerErrors['password'] %}<span class="error">Doit contenir 8 caractères minimum, des chiffres et des lettres</span>{% endif %}
            </div>
            <div>
                <input type="checkbox" name="terms" id="terms" required>
                <label class="{% if registerErrors['terms'] %} error {% endif %}"  for="terms">En m'inscrivant, j'accepte que mes données soient utilisées afin de confirmer mon compte par email. J'accepte également les conditions générales d'utilisation ainsi que la politique d'utilisation des cookies.</label>
            </div>
            <div>
                <input type="submit" value="S'inscrire">
            </div>
        </form>
    </div>
{% endblock %}
